<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="String" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guildeline1"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guildeline2"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.97" />


            <LinearLayout
                android:id="@+id/layTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/white"
                android:elevation="@dimen/_2sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/circleshape_1"
                android:drawableTint="@color/text0range"
                android:elevation="@dimen/_3sdp"
                android:gravity="center"
                android:paddingStart="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24"

                android:textColor="@color/text0range"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/layTop"
                app:layout_constraintStart_toStartOf="@id/guildeline1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"

                android:elevation="@dimen/_2sdp"
                android:fontFamily="@font/mulish_regular"
                android:text="Transfer to new payee"
                android:textAllCaps="true"
                android:textColor="@color/text0range"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/layTop"
                app:layout_constraintStart_toEndOf="@+id/btnBack"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_weight="1"
                android:fontFamily="@font/mulish_regular"
                android:text="@string/how_often_would_you_transfer_funds_to_this_payee"
                android:textColor="@color/textcolornewgrey"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                app:layout_constraintTop_toBottomOf="@+id/layTop" />

            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/guildeline2"
                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                app:layout_constraintTop_toBottomOf="@+id/tvLabel">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/quickTransferCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:strokeColor="@color/text0range"
                    app:strokeWidth="1dp">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_7sdp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/quick_transfer"
                                android:textAllCaps="true"
                                android:textColor="@color/text0range1"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                                app:layout_constraintTop_toBottomOf="@+id/layTop" />

                          <!--  <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/quick_transfer"
                                android:textAllCaps="true"
                                android:visibility="visible"
                                android:textColor="@color/text0range1"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                                app:layout_constraintTop_toBottomOf="@+id/layTop" />
-->
                            <ImageView
                                android:background="@drawable/circleshape_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/check_24" />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/mulish_regular"
                            android:text="@string/just_in_time_it_does_not_require_adding_the_payee"
                            android:textColor="@color/textcolornewgrey"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@+id/guildeline1"
                            app:layout_constraintTop_toBottomOf="@+id/layTop" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/addNewPayeeCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp">


                    <LinearLayout
                        android:id="@+id/layNewFT"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_7sdp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/add_new_payee"
                                android:textAllCaps="true"
                                android:textColor="@color/text0range1"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                                app:layout_constraintTop_toBottomOf="@+id/layTop" />

                            <ImageView
                                android:background="@drawable/circleshape_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />


                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/mulish_regular"
                            android:text="@string/multiple_times_easily_transfer_in_the_future"
                            android:textColor="@color/textcolornewgrey"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@+id/guildeline1"
                            app:layout_constraintTop_toBottomOf="@+id/layTop" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/color_grad_new"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guildeline2"
                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                app:layout_constraintTop_toBottomOf="@+id/lay2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/mulish_regular"
                    android:text="@string/newpayee_transfer"
                    android:textAllCaps="true"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_13sdp">

                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/bankInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:background="@null"
                    android:elevation="@dimen/_2sdp"
                    android:textColorHint="@color/textcolornewgrey"


                    app:hintTextColor="@color/textcolornewgrey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/selectbankTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/capsuleshapegrey"

                        android:clickable="true"
                        android:drawableStart="@drawable/ic_baseline_search_24"
                        android:drawableLeft="@drawable/ic_baseline_search_24"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                        android:elevation="@dimen/_2sdp"
                        android:focusable="false"
                        android:fontFamily="@font/mulish_regular"
                        android:hint="Select their bank"
                        android:padding="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/textcolornewgrey"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ifscInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@null"
                    android:elevation="@dimen/_2sdp"
                    android:visibility="gone"
                    android:textColorHint="@color/textcolornewgrey"
                    app:errorTextColor="@color/red"
                    app:hintTextColor="@color/textcolornewgrey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/ifsccode"
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/capsuleshapegrey"


                        android:elevation="@dimen/_2sdp"

                        android:fontFamily="@font/mulish_regular"
                        android:hint="@string/ifsc"
                        android:inputType="number"
                        android:maxLength="18"
                        android:padding="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/textcolornewgrey"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.example.myapplication.views.NoChangingBackgroundTextInputLayout
                    android:id="@+id/accountNOInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@null"
                    android:elevation="@dimen/_2sdp"

                    android:textColorHint="@color/textcolornewgrey"
                    app:errorTextColor="@color/red"
                    app:hintTextColor="@color/textcolornewgrey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/accountNOET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/capsuleshapegrey"


                        android:elevation="@dimen/_2sdp"

                        android:fontFamily="@font/mulish_regular"
                        android:hint="@string/their_account_number"
                        android:inputType="numberPassword"
                        android:maxLength="18"
                        android:padding="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/textcolornewgrey"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />
                </com.example.myapplication.views.NoChangingBackgroundTextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirmETInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@null"
                    android:elevation="@dimen/_2sdp"
                    android:textColorHint="@color/textcolornewgrey"
                    app:errorTextColor="@color/red"
                    app:hintTextColor="@color/textcolornewgrey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/confirmET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/capsuleshapegrey"
                        android:fontFamily="@font/mulish_regular"
                        android:hint="@string/confirm_their_account_number"
                        android:inputType="number"
                        android:maxLength="18"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/textcolornewgrey"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_baseline_info_24"
                    android:drawableLeft="@drawable/ic_baseline_info_24"
                    android:drawablePadding="@dimen/_2sdp"
                    android:text="@string/verify_payee_details_to_ensure_the_safety_of_your_fund_transfer"
                    android:textColor="@color/textcolornewgrey"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/capsuleshape"
                    android:elevation="@dimen/_1sdp"
                    android:fontFamily="@font/mulish_regular"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/verify_payee"
                    android:textAllCaps="true"
                    android:textColor="@color/text0range"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:visibility="gone" />



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/amountInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@null"
                    android:elevation="@dimen/_2sdp"
                    android:textColorHint="@color/textcolornewgrey"
                    app:errorTextColor="@color/red"
                    app:hintTextColor="@color/textcolornewgrey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"

                        android:background="@drawable/capsuleshapegrey"
                        android:drawableStart="@drawable/rupeesimbol"
                        android:drawableLeft="@drawable/rupeesimbol"
                        android:elevation="@dimen/_2sdp"
                        android:fontFamily="@font/mulish_regular"

                        android:hint="Enter amount"
                        android:inputType="numberDecimal"
                        android:maxLines="18"
                        android:padding="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/textcolornewgrey"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_baseline_info_24"
                    android:drawableLeft="@drawable/ic_baseline_info_24"
                    android:drawablePadding="@dimen/_2sdp"
                    android:text="@string/maximum_transfer_limit_is_upto_5_000"
                    android:textColor="@color/textcolornewgrey"
                    android:textSize="@dimen/_10sdp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@null"
                    android:elevation="@dimen/_2sdp"

                    android:textColorHint="@color/textcolornewgrey"
                    app:errorTextColor="@color/red"
                    app:hintTextColor="@color/textcolornewgrey">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/remarksTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/capsuleshapegrey"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                        android:elevation="@dimen/_2sdp"
                        android:fontFamily="@font/mulish_regular"
                        android:hint="@string/remarks_optional"
                        android:padding="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/textcolornewgrey"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/selectAccountNoInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@null"
                    android:elevation="@dimen/_2sdp"
                    android:textColorHint="@color/textcolornewgrey"
                    app:errorTextColor="@color/red"
                    app:hintTextColor="@color/textcolornewgrey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/selectAccountNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/capsuleshapegrey"
                        android:clickable="true"
                        android:drawableStart="@drawable/icici_i"
                        android:drawableLeft="@drawable/icici_i"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"

                        android:drawablePadding="@dimen/_5sdp"
                        android:elevation="@dimen/_2sdp"
                        android:focusable="false"
                        android:fontFamily="@font/mulish_regular"
                        android:hint="Transferring funds from"
                        android:padding="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/textcolornewgrey"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />


                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_2sdp"
                        android:fontFamily="@font/mulish_regular"
                        android:text="@string/current_balance"
                        android:textAllCaps="true"
                        android:textColor="@color/textcolornewgrey"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/balanceTv"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_2sdp"
                        android:fontFamily="@font/mulish_regular"
                        android:textColor="@color/textcolornewgrey1"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_2sdp"
                    android:visibility="invisible"
                    android:text="@string/want_to_transfer_funds_today"
                    android:textColor="@color/textcolornewgrey"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnTransfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/capsuleshape"
                    android:elevation="@dimen/_1sdp"
                    android:fontFamily="@font/mulish_regular"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/transfer_now"
                    android:textAllCaps="true"
                    android:textColor="@color/text0range"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@null"
                    android:elevation="@dimen/_1sdp"
                    android:fontFamily="@font/mulish_regular"
android:visibility="gone"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/text0range"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/color_grad_new"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
