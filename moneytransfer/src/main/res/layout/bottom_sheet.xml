<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_30sdp"
    app:cardElevation="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_regular"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/please_select_a_sim"
            android:textColor="@color/textblue"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_regular"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/please_select_your_registered_mobile_number_from_the_sims_below"
            android:textColor="@color/textcolornewgrey"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/sim1Lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundecorner"
            android:orientation="horizontal"
            android:padding="@dimen/_7sdp">


            <ImageView
                android:id="@+id/sim1Img"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_baseline_check_24"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/circleshape_grey" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_regular"
                    android:gravity="center"

                    android:text="sim1"
                    android:textAllCaps="true"
                    android:textColor="@color/textcolornew"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/sim1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/mulish_regular"
                    android:gravity="center"
                    android:text="sim"
                    android:textColor="@color/textcolornew"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/sim" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/sim2Lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundecorner"
            android:orientation="horizontal"
            android:padding="@dimen/_7sdp">


            <ImageView
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_baseline_check_24"

                android:id="@+id/sim2Img"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/circleshape_grey" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_regular"
                    android:gravity="center"

                    android:text="sim1"
                    android:textAllCaps="true"
                    android:textColor="@color/textcolornew"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/sim2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/mulish_regular"
                    android:gravity="center"
                    android:text="sim"
                    android:textColor="@color/textcolornew"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/sim" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>