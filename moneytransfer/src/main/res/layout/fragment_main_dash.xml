<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guildeline1"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guildeline2"

            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97" />



        <LinearLayout

            app:layout_constraintEnd_toEndOf="@+id/guildeline2"
            app:layout_constraintStart_toStartOf="@+id/guildeline1"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/containertop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ScrollView
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/fingerPrintLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_margin="@dimen/_2sdp"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/circleshapewhite"
                            android:elevation="@dimen/_2sdp"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_baseline_remove_red_eye_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/mulish_regular"
                            android:text="@string/hide"
                            android:textAllCaps="true"
                            android:textColor="@color/text0range"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:visibility="gone"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/circleshapewhite"
                            android:elevation="@dimen/_2sdp"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_baseline_flip_camera_android_24" />

                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_regular"
                            android:text="@string/flip"
                            android:textAllCaps="true"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textColor="@color/text0range"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_3sdp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="@dimen/_7sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/home"
                                    android:drawablePadding="@dimen/_2sdp"
                                    android:visibility="visible"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="@string/total_overdraft_balance"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    android:drawableLeft="@drawable/home" />

                                <TextView
                                    android:visibility="invisible"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="₹ 36.40 lacks"
                                    android:textAllCaps="true"

                                    android:textColor="@color/textcolornewgrey"
                                    android:textSize="@dimen/_15sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/colorgrad"
                                android:orientation="vertical"
                                android:padding="@dimen/_7sdp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/ic_baseline_info_24"
                                    android:drawableRight="@drawable/ic_baseline_info_24"
                                    android:drawablePadding="@dimen/_2sdp"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="@string/total_accounts_balance"
                                    android:textAllCaps="true"
                                    android:textColor="@color/textcolornew"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/totalaccbalance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="₹ 0.00 "
                                    android:textAllCaps="true"
                                    android:textColor="@color/textcolornewgrey"
                                    android:textSize="@dimen/_15sdp" />

                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="@dimen/_7sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableEnd="@drawable/ic_baseline_info_24"
                                    android:drawableRight="@drawable/ic_baseline_info_24"
                                    android:drawablePadding="@dimen/_2sdp"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="@string/total_savings_balance"
                                    android:textAllCaps="true"
                                    android:textColor="@color/textcolornew"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/savingBalanceTv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="₹ 00.00 lacks"
                                    android:textAllCaps="true"

                                    android:textColor="@color/textcolornewgrey"
                                    android:textSize="@dimen/_15sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/colorgrad"
                                android:orientation="vertical"
                                android:padding="@dimen/_7sdp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/ic_baseline_info_24"
                                    android:drawableRight="@drawable/ic_baseline_info_24"
                                    android:drawablePadding="@dimen/_2sdp"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="@string/total_deposits"
                                    android:textAllCaps="true"
                                    android:textColor="@color/textcolornew"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/depositBalanceTv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="₹ 00.00 lacks"
                                    android:textAllCaps="true"
                                    android:textColor="@color/textcolornewgrey"
                                    android:textSize="@dimen/_15sdp" />

                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_3sdp">


                        <androidx.cardview.widget.CardView
                            android:layout_margin="@dimen/_2sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardElevation="@dimen/_2sdp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_7sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableEnd="@drawable/ic_baseline_info_24"
                                        android:drawableRight="@drawable/ic_baseline_info_24"
                                        android:drawablePadding="@dimen/_2sdp"
                                        android:fontFamily="@font/mulish_regular"
                                        android:text="@string/total_overdraft_balance"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textcolornew"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                                        android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                                        android:fontFamily="@font/mulish_regular"
                                        android:text="@string/_36_40_lacks"
                                        android:textAllCaps="true"

                                        android:textColor="@color/textcolornewgrey"
                                        android:textSize="@dimen/_15sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/colorgrad"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_7sdp">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:drawableEnd="@drawable/ic_baseline_info_24"
                                        android:drawableRight="@drawable/ic_baseline_info_24"
                                        android:drawablePadding="@dimen/_2sdp"
                                        android:fontFamily="@font/mulish_regular"
                                        android:text="@string/total_outstanding_loan"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textcolornew"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                                        android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                                        android:fontFamily="@font/mulish_regular"
                                        android:text="₹ 9.75 lacks"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textcolornewgrey"
                                        android:textSize="@dimen/_15sdp" />

                                </LinearLayout>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_3sdp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="@dimen/_7sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/home"
                                    android:drawablePadding="@dimen/_2sdp"
                                    android:visibility="visible"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="@string/total_overdraft_balance"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    android:drawableLeft="@drawable/home" />

                                <TextView
                                    android:visibility="invisible"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="₹ 36.40 lacks"
                                    android:textAllCaps="true"

                                    android:textColor="@color/textcolornewgrey"
                                    android:textSize="@dimen/_15sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/colorgrad"
                                android:orientation="vertical"
                                android:padding="@dimen/_7sdp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/ic_baseline_info_24"
                                    android:drawableRight="@drawable/ic_baseline_info_24"
                                    android:drawablePadding="@dimen/_2sdp"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="@string/total_investment"
                                    android:textAllCaps="true"
                                    android:textColor="@color/textcolornew"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                                    android:fontFamily="@font/mulish_regular"
                                    android:text="₹ 88.55 lacks"
                                    android:textAllCaps="true"
                                    android:textColor="@color/textcolornewgrey"
                                    android:textSize="@dimen/_15sdp" />

                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </ScrollView>



            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone"
                android:padding="@dimen/_10sdp"
                android:fontFamily="@font/mulish_regular"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/text0range"
                android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                android:text="@string/view_account_statement"
                android:background="@drawable/capsuleshape"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_2sdp"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fundTransferBtn"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:elevation="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:textSize="@dimen/_13sdp"
                android:padding="@dimen/_10sdp"
                android:fontFamily="@font/mulish_regular"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/textblue"
                android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                android:text="@string/fund_transfer"
                android:background="@drawable/capsuleshape"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/moneyTransferBtn"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:elevation="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:textSize="@dimen/_13sdp"
                android:padding="@dimen/_10sdp"
                android:fontFamily="@font/mulish_regular"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/textblue"
                android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                android:text="@string/money_transfer"
                android:background="@drawable/capsuleshape"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"/> </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>