<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guildeline1"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guildeline2"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.97" />


            <LinearLayout
                android:id="@+id/layTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/white"
                android:elevation="@dimen/_2sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/circleshape_1"
                android:drawableTint="@color/text0range"
                android:elevation="@dimen/_3sdp"
                android:gravity="center"
                android:paddingStart="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/text0range"

                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/layTop"
                app:layout_constraintStart_toStartOf="@id/guildeline1"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"

                android:elevation="@dimen/_2sdp"
                android:fontFamily="@font/mulish_regular"
                android:text="Transfer to new payee"
                android:textAllCaps="true"
                android:textColor="@color/text0range"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/layTop"
                app:layout_constraintStart_toEndOf="@+id/btnBack"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_weight="1"
                android:fontFamily="@font/mulish_regular"
                android:text="@string/how_often_would_you_transfer_funds_to_this_payee"
                android:textColor="@color/textcolornewgrey"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                app:layout_constraintTop_toBottomOf="@+id/layTop" />

            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@id/guildeline2"
                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                app:layout_constraintTop_toBottomOf="@+id/tvLabel">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/fromTransferCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icici_i" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:padding="@dimen/_7sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/nameTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/quick_transfer"
                                android:textAllCaps="true"
                                android:textColor="@color/text0range1"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                                app:layout_constraintTop_toBottomOf="@+id/layTop" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/accountNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/mulish_regular"
                                android:text=""
                                android:textColor="@color/textcolornewgrey"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                                app:layout_constraintTop_toBottomOf="@+id/layTop" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/bankname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/mulish_regular"
                                android:text="ICICI BANK"
                                android:textColor="@color/textcolornew"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                                app:layout_constraintTop_toBottomOf="@+id/layTop" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/toTransferCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/otherBank"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/sbi" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:padding="@dimen/_7sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/toNameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/quick_transfer"
                                android:textAllCaps="true"
                                android:textColor="@color/text0range1"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                                app:layout_constraintTop_toBottomOf="@+id/layTop" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/toAccountTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/mulish_regular"
                                android:text=""
                                android:textColor="@color/textcolornewgrey"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                                app:layout_constraintTop_toBottomOf="@+id/layTop" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tobankname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/mulish_regular"
                                android:text="SBI BANK"
                                android:textColor="@color/textcolornew"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                                app:layout_constraintTop_toBottomOf="@+id/layTop" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/toIFSC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/mulish_regular"
                                android:text=""
                                android:textColor="@color/textcolornew"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                                app:layout_constraintTop_toBottomOf="@+id/layTop" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/color_grad_new"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guildeline2"
                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                app:layout_constraintTop_toBottomOf="@+id/lay2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/mulish_regular"
                    android:text="@string/newpayee_transfer"
                    android:textAllCaps="true"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_13sdp">

                </TextView>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/amountInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@null"
                    android:elevation="@dimen/_2sdp"
                    android:textColorHint="@color/textcolornewgrey"
                    app:errorTextColor="@color/red"
                    app:hintTextColor="@color/textcolornewgrey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"

                        android:background="@drawable/capsuleshapegrey"
                        android:drawableStart="@drawable/rupeesimbol"
                        android:drawableLeft="@drawable/rupeesimbol"
                        android:elevation="@dimen/_2sdp"
                        android:fontFamily="@font/mulish_regular"

                        android:hint="Enter amount"
                        android:inputType="numberDecimal"
                        android:maxLines="18"
                        android:padding="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/textcolornewgrey"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_2sdp"
                        android:fontFamily="@font/mulish_regular"
                        android:text="@string/current_balance"
                        android:textAllCaps="true"
                        android:textColor="@color/textcolornewgrey"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/balanceTv"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_2sdp"
                        android:fontFamily="@font/mulish_regular"
                        android:textColor="@color/textcolornewgrey1"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_baseline_info_24"
                    android:drawableLeft="@drawable/ic_baseline_info_24"
                    android:drawablePadding="@dimen/_2sdp"
                    android:text="@string/maximum_transfer_limit_is_upto_5_000"
                    android:textColor="@color/textcolornewgrey"
                    android:textSize="@dimen/_10sdp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@null"
                    android:elevation="@dimen/_2sdp"

                    android:textColorHint="@color/textcolornewgrey"
                    app:errorTextColor="@color/red"
                    app:hintTextColor="@color/textcolornewgrey">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/remarksTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/capsuleshapegrey"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                        android:elevation="@dimen/_2sdp"
                        android:fontFamily="@font/mulish_regular"
                        android:hint="@string/remarks_optional"
                        android:padding="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/textcolornewgrey"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_2sdp"
                    android:text="@string/want_to_transfer_funds_today"
                    android:textColor="@color/textcolornewgrey"
                    android:textSize="@dimen/_10sdp" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"

                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:strokeColor="@color/text0range"
                    app:strokeWidth="@dimen/_1sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"

                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/imps"
                                android:textAllCaps="true"
                                android:textColor="@color/text0range1"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                                app:layout_constraintTop_toBottomOf="@+id/layTop" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/circleshape_white"
                                app:srcCompat="@drawable/check_24" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:drawablePadding="@dimen/_2sdp"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/upto_2_lakh"
                                android:textColor="@color/textcolornew"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/_24_7_available"
                                android:textColor="@color/textcolornewgrey"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="@dimen/_1sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"

                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/neft"
                                android:textAllCaps="true"
                                android:textColor="@color/text0range1"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                                app:layout_constraintTop_toBottomOf="@+id/layTop" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/circleshape_white" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">
                            //Current Balance

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:drawablePadding="@dimen/_2sdp"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/upto_5_lakh"
                                android:textColor="@color/textcolornew"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/_12_30_am_to_6_30_pm"
                                android:textColor="@color/textcolornewgrey"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:orientation="horizontal">
                            //Current Balance

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:drawablePadding="@dimen/_2sdp"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/upto_3_lakh"
                                android:textColor="@color/textcolornew"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/mulish_regular"
                                android:text="6:31 PM to 11:00 PM"
                                android:textColor="@color/textcolornewgrey"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="@dimen/_1sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"

                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/mulish_regular"
                                android:text="@string/rtgs"
                                android:textAllCaps="true"
                                android:textColor="@color/text0range1"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@+id/guildeline1"
                                app:layout_constraintTop_toBottomOf="@+id/layTop" />

                            <ImageView
